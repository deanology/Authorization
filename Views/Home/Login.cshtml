@model WebApplication.Models.Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-7">
                <div class="login_form_container bg-dark mt-5">
                    @*Using Razor Form*@

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "registration_form p-5" }))
                    {
                        @Html.AntiForgeryToken(); @*This is to prevent CSRF attack*@
                        <h2 class="form-title text-center text-uppercase text-white-50">Login</h2>
                        <div class ="form-group">
                            @Html.TextBoxFor(m => m.Email, " ", new { @class = "form-control email", @placeholder = "Enter your email address", @id = "email" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Password, " ", new { @class = "form-control password", @placeholder = "Enter your password", @id = "password" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            <input type="submit" class="form-control" id="submit" aria-describedby="submit" value="Login" />
                        </div>

                        <p class="mt-3 text-center text-white text-decoration-none">Don't have an account ? @Html.ActionLink("Register", "/Registration", "Account", new { @class = "font-weight-bold" })</p>
                    }
                </div>
            </div>

        </div>
    </div>
</section>

